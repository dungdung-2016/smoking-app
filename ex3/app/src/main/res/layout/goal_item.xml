<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/days"
        android:layout_width="54dp"
        android:layout_height="58dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="7dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/effect"
        app:layout_constraintEnd_toStartOf="@+id/effect"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/effect"
        android:layout_width="240dp"
        android:layout_height="57dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/done"
        app:layout_constraintEnd_toStartOf="@+id/done"
        app:layout_constraintStart_toEndOf="@+id/days"
        app:layout_constraintTop_toTopOf="@+id/done" />

    <ImageView
        android:id="@+id/done"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/effect"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_text_border" />
</androidx.constraintlayout.widget.ConstraintLayout>